{
    "compilerOptions": {
        "lib": ["deno.ns", "dom"],
        "strict": true,
        "allowJs": true
    },
    "lint": {
        "include": ["src/", "tests/**/*.ts"],
        "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "include": ["src/"],
        "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "tasks": {
        "start": "deno run --allow-read --allow-env --allow-net src/main.ts",
        "test": "deno test --allow-read --allow-env --allow-net"
    },
    "imports": {},
    "exclude": ["dist/"]
}
