{
    "compilerOptions": {
        "lib": ["deno.ns", "dom"],
        "strict": true,
        "allowJs": true
    },
    "lint": {
        "include": ["src/"],
        "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "include": ["src/"],
        "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
    },
    "tasks": {
        "start": "deno run --allow-net --allow-read src/main.ts"
    },
    "imports": {},
    "exclude": ["dist/"]
}
